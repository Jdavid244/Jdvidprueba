if opción == 1:
    jugador = "Piedra"
elif opción == 2:
    jugador = "Papel"
elif opción == 3:
    jugador = "Tijera"
elif opción == 4:
    jugador = "Lagarto"
elif opción == 5:
    jugador = "Spock"
